{
  "compilerOptions": {
    "sourceMap": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": ["es6", "dom"],
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./build",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "declaration": true,
    "baseUrl": "./",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src/*.ts"],
  "exclude": ["node_modules", "dist", "build"]
}
